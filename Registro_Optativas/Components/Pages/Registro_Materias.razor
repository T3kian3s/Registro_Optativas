@page "/registroMaterias"
@rendermode InteractiveServer
@attribute [StreamRendering]
@inject NavigationManager _navigator;
@inject IRepositorioMaterias _repositorio;
@inject IRepositorioEstudiantes _Erepositorio;
<h2>Registro de Materias</h2>

<a class="btn btn-success" href="materias/nueva">Agregar materia</a>
@if (_materias == null)
{
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Cargando...</span>
    </div>
}
else if(_materias.Count == 0)
{
    <h3>No existen materias registradas</h3>
}   
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Lugares</th>
                <th>Aula</th>
                <th>Descripción</th>
                <th>Registrados</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Materia materia in _materias)
            {
                <tr>
                    <td>@materia.Id</td>
                    <td>@materia.Nombre</td>
                    <td>@materia.MaxLugares</td>
                    <td>@materia.Aula</td>
                    <td>@materia.Descripcion</td>
                    <td>
                        <button class="btn btn-sm" title="Registrados" @onclick="()=>Registrados(materia.Id)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                            </svg>
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-sm" title="Modificar" @onclick="()=>Modificar(materia.Id)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                            </svg>
                        </button>
                        <button class="btn btn-sm" title="Eliminar" @onclick="()=>Eliminar(materia)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if(_estudiantes != null)
    {
        <h3>Estudiantes registrados en esta materia: </h3>
        <ul>
            @foreach(var estudiante in _estudiantes)
            {
                <li value="@estudiante.MateriaId">@estudiante.Nombre</li>
            }
        </ul>
    }
}
@code {
    private List<Materia>? _materias;
    private List<Estudiante>? _estudiantes;

    protected override async Task OnInitializedAsync()
    {
        _materias = await _repositorio.GetAll();
    }

    private async void Eliminar(Materia materia)
    {
        await _repositorio.Delete(materia.Id);
        _materias!.Remove(materia);
        StateHasChanged();
    }

    private void Modificar(int id)
    {
        _navigator.NavigateTo($"/materias/editar/{id}");
    }

    private async void Registrados(int materiaId)
    {
        _estudiantes = await _Erepositorio.GetRegistrados(materiaId);
        StateHasChanged();
    }
}